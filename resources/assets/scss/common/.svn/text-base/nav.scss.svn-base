.nav-list{
    margin: {
        left: 6px;
    }
    background: #ffffff;
    border: {
        bottom: 1px solid rgba(0, 0, 0, 0.125);
    }
    ul{
        &:first-child{
            width: calc(100% - 36px);
        }
        &:last-child{
            .nav-item{
                width: 100%;
            }
        }
    }
    .nav-item{
        width: 9%;
        margin: {
            right: 1%;
        }
        height: 60px;
        line-height: 60px;
        text-align: center;
        white-space: nowrap;
        a{
            display: block;
            padding: 0 5px;
            color: #707E8B;
            font-size: 17px;
            font-weight: 600;
            &:hover,&.active{
                text-decoration: none;
                color: #3784D2;
                border: {
                    bottom: 2px solid #3784D2;
                }
            }
            i.fa{
                color: #29a7e1;
                font-size: 24px;
            }
        }
    }
}
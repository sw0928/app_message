}
.register label{
    width: 18%;
//  text-align: right;
}
.register input{
    display: inline-block;
    width: 80%;
}
.register .sendPhone{
    position: absolute;
    cursor: default;
    right: 15px;
    top: 7px;
    border-radius: 2px;
    padding: 5px 12px;
    color: #fff;
    border: none;
    background: linear-gradient(to left, #2aa7de, #8ec31f);
    white-space: nowrap;
    font-size: 13px;
    transition: all 0.2s;
}
.register .sendPhone:hover{
    color: #F4F4F4;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
        background: linear-gradient(to left, #2d87af, #79a028);
}
button.ensure{
    color: #fff;
    border: none;
    background: linear-gradient(to left, #2aa7de, #8ec31f);
}

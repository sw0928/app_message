//bootsrap
$icon-font-path: "../fonts/vendor/bootstrap/";
@import "~bootstrap/scss/bootstrap";

html{
    overflow: hidden;
    height: 100%;
}
.main-cont{
    min-width: 1200px;
    height: 100%;
    justify-content: center;
    align-items: center;
    //--------旋转动画---------
    .circle-right{
        position: absolute;        
        top: -300px;
        right: -600px;
        -webkit-transform: rotate(360deg);
        animation: rotation 4s linear infinite;
        -moz-animation: rotation 4s linear infinite;
        -webkit-animation: rotation 4s linear infinite;
        -o-animation: rotation 4s linear infinite;
        div{
            width: 1100px;
            height: 1100px;
            position: relative;                 
            border: 1px solid transparent;                 
            border-radius: 50%;
            background: white;
            background-clip: padding-box;
            padding: 10px;           
            &:after{
                position: absolute;
                top: -130px; 
                bottom: -130px;
                left: -130px;
                right: -130px;
                background: linear-gradient(to right,#c5ef71, #2ba7de);
                content: '';
                z-index: -1;
                border-radius: 50%;
            }
        }        
    }
    .circle-left{
        position: absolute;
        bottom: -200px;
        left: -200px;
        -webkit-transform: rotate(360deg);
        animation: rotation 4s linear infinite;
        -moz-animation: rotation 4s linear infinite;
        -webkit-animation: rotation 4s linear infinite;
        -o-animation: rotation 4s linear infinite;
        div{
            position: relative;
            width: 400px;
            height: 400px;                             
            border: 1px solid transparent;                 
            border-radius: 50%;
            background: white;
            background-clip: padding-box;
            padding: 10px;
           
            &:after{
                position: absolute;
                top: -50px; 
                bottom: -50px;
                left: -50px;
                right: -50px;
                background: linear-gradient(to right, #2ba7de, #c5ef71);
                content: '';
                z-index: -1;
                border-radius: 50%;
            }
        }        
    }
    //旋转动画
    @-webkit-keyframes rotation{
        from {-webkit-transform: rotate(0deg);}
        to {-webkit-transform: rotate(360deg);}
    }
    //--------波纹动画---------
    .wave-cont{
        width: 85px;
        height:85px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        -ms-transform:translate(-50%,-50%); /* IE 9 */
        -webkit-transform:translate(-50%,-50%); /* Safari and Chrome */
       .wave-icon{
            width: 10px;
            height: 10px;
            border-radius: 50%;
            border:2px solid #e9e9e9;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            -ms-transform:translate(-50%,-50%); /* IE 9 */
            -webkit-transform:translate(-50%,-50%); /* Safari and Chrome */
            &.circle{
                background: #8dc51e;
            }
        }
        .wave1{
            animation:mywave 4s infinite ;
            -webkit-animation:mywave 4s infinite;/* Safari and Chrome */
        }
        .wave2{
            animation:mywave2 4s infinite 0.5s;
            -webkit-animation:mywave2 4s infinite 0.5s;/* Safari and Chrome */
        }
        .wave3{
            animation:mywave3 4s infinite 1s;
            -webkit-animation:mywave3 4s infinite 1s;/* Safari and Chrome */
        }
    }
    
    //彩信
    #MMS{
        position: absolute;
        top: 35%;
        left: 6%;
        .MMS-cont{
            margin: {
                top: -65px;  
            }
            text-align: center;
            .bg-img{
                img{
                    width: 155px;
                }
            }
            span{
                margin: {
                    top: 5px;
                }
                color: #b2b2b2;
                font-size: 22px;
            }
        }
        .wave-cont{
            width: 340px;
            height:340px;            
        }
        
    }
    //语音
    #voice{
        position: absolute;
        top: 19%;
        left: 45%;
        .voice-cont{
            margin-top: -70px;
            text-align: center;
            .bg-img{
                img{
                    width: 155px;
                }
            }
            span{
                margin: {
                    top: 5px;
                }
                color: #b2b2b2;
                font-size: 16px;
            }
        }
        .wave-cont{
            width: 190px;
            height:190px;
            .wave-icon{
                &.circle{
                    background: #f6923e;
                }
            }
            .wave1{
                animation:mywave01 4s infinite ;
                -webkit-animation:mywave01 4s infinite;/* Safari and Chrome */
            }
            .wave2{
                animation:mywave02 4s infinite 0.5s;
                -webkit-animation:mywave02 4s infinite 0.5s;/* Safari and Chrome */
            }
            .wave3{
                animation:mywave03 4s infinite 1s;
                -webkit-animation:mywave03 4s infinite 1s;/* Safari and Chrome */
            }
        }
    }
    //短信
    #message{
        position: absolute;
        bottom: 12%;
        left: 40%;
        .voice-cont{
            margin-top: -70px;
            text-align: center;
            .bg-img{
                img{
                    width: 155px;
                }
            }
            span{
                margin: {
                    top: 5px;
                }
                color: #b2b2b2;
                font-size: 16px;
            }
        }
        .wave-cont{
            width: 190px;
            height:190px;
            .wave-icon{
                &.circle{
                    background: #f6923e;
                }
            }
            .wave1{
                animation:mywave01 4s infinite 1s;
                -webkit-animation:mywave01 4s infinite 1s;/* Safari and Chrome */
            }
            .wave2{
                animation:mywave02 4s infinite 1.5s;
                -webkit-animation:mywave02 4s infinite 1.5s;/* Safari and Chrome */
            }
            .wave3{
                animation:mywave03 4s infinite 2.5s;
                -webkit-animation:mywave03 4s infinite 2.5s;/* Safari and Chrome */
            }
        }
    }
    //主要信息
    #main-info{
        position: absolute;
        top: 75%;
        left: 15%;
        .img-cont{
            margin: {
                top: -295px;
            }
            width: 45%;
            transition: all 4s;
            &:hover{
                transform: rotateY(360deg);
            }
        }
        .wave-cont{
            width: 190px;
            height:190px;
            top: 0;
            bottom: 0;
            left: 22.5%;
            .wave-icon{
                &.circle{
                    background: #29a7e1;
                }
            }
            .wave1{
                animation:mywave01 4s infinite 1.5s;
                -webkit-animation:mywave01 4s infinite 1.5s;/* Safari and Chrome */
            }
            .wave2{
                animation:mywave02 4s infinite 2s;
                -webkit-animation:mywave02 4s infinite 2s;/* Safari and Chrome */
            }
            .wave3{
                animation:mywave03 4s infinite 2.5s;
                -webkit-animation:mywave03 4s infinite 2.5s;/* Safari and Chrome */
            }
        }
    }
    //固定波纹
    #fixed-wave{
        position: absolute;
        left: 20%;
        bottom: 18%;
        .wave-cont{
            width: 190px;
            height:190px;
            .wave-icon{
                &.circle{
                    background: #29a7e1;
                }
            }
            .wave1{
                animation:mywave01 4s infinite 1.5s;
                -webkit-animation:mywave01 4s infinite 1.5s;/* Safari and Chrome */
            }
            .wave2{
                animation:mywave02 4s infinite 2s;
                -webkit-animation:mywave02 4s infinite 2s;/* Safari and Chrome */
            }
            .wave3{
                animation:mywave03 4s infinite 2.5s;
                -webkit-animation:mywave03 4s infinite 2.5s;/* Safari and Chrome */
            }
        }
    }
    @keyframes mywave{
        from {opacity: 1}
        to {width:300px;height: 300px;opacity: 0}
    }   
    @keyframes mywave2{
        from {opacity: 1}
        to {width: 300px;height: 300px;opacity: 0}
    }
    @keyframes mywave3{
        from {opacity: 1}
        to {width: 300px;height: 300px;opacity: 0}
    }
    
    @keyframes mywave01{
        from {opacity: 1}
        to {width:190px;height: 190px;opacity: 0}
    }   
    @keyframes mywave02{
        from {opacity: 1}
        to {width: 190px;height: 190px;opacity: 0}
    }
    @keyframes mywave03{
        from {opacity: 1}
        to {width: 190px;height: 190px;opacity: 0}
    }

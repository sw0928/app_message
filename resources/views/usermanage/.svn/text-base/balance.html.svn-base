<div class="modal-header justify-content-between">
    <h3 class="modal-title" id="modal-title">余额告警</h3>
    <button type="button" class="btn btn-outline-close" ng-click="cancel()"><i class="fa fa-remove"></i></button>
</div>
<form class="bg-fb" ng-submit="ensure()">
    <div class="modal-body" id="modal-body">       
        <div class="form-row">
		    <div class="form-group col-md-6">
		      	<label>登录名</label>
		      	<input type="text" disabled ng-model="basedata.loginName" disabled class="form-control" placeholder="请输入">
		    </div>
		    <div class="form-group col-md-6">
		      	<label for="cellphone">号码</label>
		      	<input type="text" ng-model="basedata.warningPhone" class="form-control" id="cellphone" required placeholder="请输入">
		    </div>
		</div>
		<div class="form-row">		   
		    <div class="form-group col-md-6">
		      	<label>金额</label>
		      	<input type="text" ng-model="basedata.warningBalance" class="form-control" placeholder="请输入">
		    </div>
		</div>
    </div>
    <div class="modal-footer justify-content-center">
        <button class="btn btn-sm btn-ensure" type="submit">确定</button>
        <button class="btn btn-sm btn-light btn-light-border" type="button" ng-click="cancel()">取消</button>
    </div>
    <div class="table-list p-2">
    	<h6 class="alert alert-info pl-1"><i class="fa fa-list-alt"></i> 已添加余额告警列表</h6>
    	<table class="table">
			<thead>
			    <tr>
			      <th scope="col">预警号码</th>
			      <th scope="col">预警金额</th>
			      <th scope="col">操作</th>
			    </tr>
	 		</thead>
			<tbody>
				<tr ng-if="tabledata.length == 0"><td colspan="3">没有找到匹配的记录</td></tr> 
			    <tr ng-if="tabledata.length > 0" ng-repeat="dataitem in tabledata">
			      <td scope="row">{{dataitem.alarmMsisdn}}</td>
			      <td>{{dataitem.alarmBalance}}</td>
			      <td><button type="button" class="btn btn-sm btn-link" ng-click="deleteBalance(dataitem)">删除</button></td>
			    </tr>
		  	</tbody>
		</table>
    </div>
</form>